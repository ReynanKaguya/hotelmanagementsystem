<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management System</title>

    <!-- ✅ Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <!-- ✅ Custom CSS -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- ✅ Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

            <!-- ✅ Navbar -->
            <<!-- ✅ Include the navbar -->
                @await Html.PartialAsync("_NavBar")

    <!-- ✅ Main Content -->
    <div class="container mt-4 flex-grow-1">
        @RenderBody()
    </div>

    <!-- ✅ Testimonials Section -->
    <div class="container mt-5">
        <div class="text-center">
            <h2 class="fw-bold">✨ What Our Guests Say ✨</h2>
        </div>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="p-3 bg-light rounded shadow">
                    <p>“This hotel booking platform is amazing! Super easy to use.”</p>
                    <strong>— Sarah D.</strong>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded shadow">
                    <p>“Booked my dream vacation in seconds! Highly recommended.”</p>
                    <strong>— Jason R.</strong>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded shadow">
                    <p>“A smooth experience from booking to check-in. 10/10!”</p>
                    <strong>— Emily L.</strong>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ Footer -->
    <footer class="bg-dark text-white text-center p-4 mt-5">
        &copy; 2025 - Cloud9 Suites | 
        <a href="@Url.Action("Privacy", "Home")" class="text-warning">Privacy Policy</a>
    </footer>

    <!-- ✅ Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
