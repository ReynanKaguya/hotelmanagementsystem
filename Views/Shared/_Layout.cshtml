<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management System</title>

    <!-- ✅ Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- ✅ Custom CSS -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- ✅ Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- ✅ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <!-- ✅ Logo -->
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                <img src="~/images/logo.png" class="me-2" alt="Cloud9 Suites" style="height: 35px;"> 
                Cloud9 Suites
            </a>

            <!-- ✅ Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- ✅ Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Home")"><i class="bi bi-house-door"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Hotels")"><i class="bi bi-building"></i> Hotels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Create", "Bookings")"><i class="bi bi-calendar-check"></i> Book Now</a>
                    </li>

                    <!-- ✅ Search -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Search", "Hotels")"><i class="bi bi-search"></i> Search</a>
                    </li>

                    <!-- ✅ Pending Bookings (Visible only to Admin/FrontDesk) -->
                    @if (User?.IsInRole("Admin") == true || User?.IsInRole("FrontDesk") == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" href="@Url.Action("PendingBookings", "Rooms")">
                                <i class="bi bi-list-check"></i> Pending Bookings
                            </a>
                        </li>
                    }
                </ul>

                <!-- ✅ Login & Register Buttons -->
                <div class="ms-3">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-white me-3">
                            <i class="bi bi-person-circle"></i> @User.Identity.Name
                        </span>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Log In
                        </a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav> 

    <!-- ✅ Main Content -->
    <div class="container mt-4 flex-grow-1">
        @RenderBody()
    </div>

    <!-- ✅ Testimonials Section -->
    <div class="container mt-5">
        <div class="text-center">
            <h2 class="fw-bold">✨ What Our Guests Say ✨</h2>
        </div>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="p-3 bg-light rounded shadow">
                    <p>“This hotel booking platform is amazing! Super easy to use.”</p>
                    <strong>— Sarah D.</strong>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded shadow">
                    <p>“Booked my dream vacation in seconds! Highly recommended.”</p>
                    <strong>— Jason R.</strong>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded shadow">
                    <p>“A smooth experience from booking to check-in. 10/10!”</p>
                    <strong>— Emily L.</strong>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ Footer Section -->
    <footer class="bg-dark text-white text-center p-4 mt-5">
        &copy; 2025 - Cloud9 Suites | 
        <a href="@Url.Action("Privacy", "Home")" class="text-warning">Privacy Policy</a>
    </footer>

    <!-- ✅ Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
