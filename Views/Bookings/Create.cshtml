            <!-- âœ… Right Side: Booking Form -->
            <div class="col-md-7">
                <form method="post" action="@Url.Action("Submit", "Bookings")">
    @Html.AntiForgeryToken() <!-- âœ… Prevent CSRF errors -->

    <input type="hidden" name="roomId" value="@Model.RoomId">

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">ðŸ‘¤ Your Name:</label>
            <input type="text" name="guestName" class="form-control" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">ðŸ“§ Your Email:</label>
            <input type="email" name="guestEmail" class="form-control" required>
