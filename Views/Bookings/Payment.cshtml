@model Booking

<div class="container mt-5">
    <h2 class="text-center">Complete Your Payment</h2>
    
    <div class="card p-4">
        <h4>Booking Details</h4>
        <p><strong>Guest:</strong> @Model.GuestName</p>
        <p><strong>Room:</strong> @Model.Room.RoomType</p>
        <p><strong>Check-in:</strong> @Model.CheckinDate.ToShortDateString()</p>
        <p><strong>Check-out:</strong> @Model.CheckoutDate.ToShortDateString()</p>
        <p><strong>Total Amount:</strong> â‚±@(Model.Room.PricePerNight * (Model.CheckoutDate - Model.CheckinDate).Days)</p>
    </div>

    <h4 class="mt-4">Select Payment Method</h4>
    <form method="post" action="/Bookings/ProcessPayment">
        <input type="hidden" name="bookingId" value="@Model.Id">

        <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" value="Credit/Debit Card" required>
            <label class="form-check-label">Credit/Debit Card</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" value="Bank Transfer">
            <label class="form-check-label">Bank Transfer</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" value="Cash">
            <label class="form-check-label">Cash</label>
        </div>

        <button type="submit" class="btn btn-success mt-3">Pay Now</button>
    </form>
</div>
