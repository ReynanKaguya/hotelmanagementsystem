@{
    ViewData["Title"] = "Reset Password - Cloud9 Suites";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="text-center fw-bold">
                        <i class="bi bi-lock-fill"></i> Reset Your Password
                    </h3>
                    <p class="text-center text-muted">Enter a new password below.</p>

                    <form method="post" action="@Url.Action("ResetPassword", "Account")">
                        <input type="hidden" name="token" value="@Context.Request.Query["token"]">
                        <input type="hidden" name="email" value="@Context.Request.Query["email"]">

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-key"></i> New Password:</label>
                            <input type="password" name="newPassword" class="form-control" placeholder="Enter new password" required>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Reset Password
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <p>Go back to <a href="@Url.Action("Login", "Account")">Login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
