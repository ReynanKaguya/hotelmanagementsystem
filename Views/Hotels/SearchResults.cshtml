@model List<Room>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">üîç Search Results</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var room in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-lg border-0">
                        <!-- ‚úÖ Room Image -->
                        <img src="~/images/@(room?.Hotel?.ImageUrl ?? "default-hotel.jpg")" 
                            class="card-img-top rounded-top" 
                            style="height: 200px; object-fit: cover;" 
                            alt="@(room?.Hotel?.Name ?? "Hotel Image")">


                        <div class="card-body">
                            <!-- ‚úÖ Hotel Name & Location -->
                            <h5 class="card-title fw-bold">üè® @(room?.Hotel?.Name ?? "Unknown Hotel")</h5>
                            <p class="text-muted"><i class="bi bi-geo-alt"></i> @(room?.Hotel?.Location ?? "Unknown Location")</p>



                            <!-- ‚úÖ Room Type & Price -->
                            <p class="fw-bold">Room Type: @room.RoomType</p>
                            <p class="fw-bold text-success">‚Ç±@room.PricePerNight.ToString("N0") / night</p>

                            <!-- ‚úÖ Availability Status -->
                            <p class="badge @(room.Status == "Vacant" ? "bg-success" : "bg-danger")">@room.Status</p>

                            <!-- ‚úÖ View Hotel & Book Now Buttons -->
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Details", "Hotels", new { id = room?.Hotel?.Id ?? 0 })" 
                                   class="btn btn-outline-primary flex-grow-1">
                                    View Hotel
                                </a>

                                @if (room.Status == "Vacant")
                                {
                                    <a href="@Url.Action("Create", "Bookings", new { hotelId = room?.Hotel?.Id ?? 0 })" 
                                       class="btn btn-success flex-grow-1">
                                        Book Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted mt-4">‚ùå No available rooms matching your criteria.</p>
    }
</div>
