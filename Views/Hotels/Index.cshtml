@model List<Hotel>

@{
    ViewData["Title"] = "Available Hotels";
}

<div class="container mt-5">
    <h2 class="text-center">üè® Available Hotels</h2>

    @if (Model != null && Model.Any()) // ‚úÖ Prevents crash if Model is null
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var hotel in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                          <img src="~/images/@hotel.ImageUrl" 
                            class="card-img-top rounded-top"
                            style="height: 250px; object-fit: cover;"
                            alt="@hotel.Name">



                        <div class="card-body">
                            <h5 class="card-title fw-bold">üè® @hotel.Name</h5>
                            <p class="card-text">@hotel.Description</p>
                            <p class="text-muted"><i class="bi bi-geo-alt"></i> @hotel.Location</p>
                            <p class="fw-bold text-success">‚Ç±@hotel.PricePerNight.ToString("N0") / night</p>

                            <a href="@Url.Action("Details", "Hotels", new { id = hotel.Id })" 
                               class="btn btn-outline-primary">
                                View Details
                            </a>                
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted mt-4">‚ùå No hotels available.</p>
    }
</div>
