@model List<Hotel> 

@{
    ViewData["Title"] = "Find Your Perfect Stay | Cloud9 Suites";
}

<!-- ✅ Hero Section -->
<div class="hero-section text-center text-white d-flex align-items-center justify-content-center"
    style="height: 500px; background: linear-gradient(to bottom, rgba(0,0,0,0.6), rgba(0,0,0,0.1)), 
    url('https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') center/cover no-repeat;">
    <div class="container position-relative">
        <h1 class="fw-bold display-4 text-shadow">Find Your Perfect Stay</h1>
        <p class="lead">Book hotels with ease at Cloud9 Suites</p>
        <a href="/Hotels/Index" class="btn btn-lg btn-warning shadow mt-3">Browse Hotels</a>
    </div>
</div>

<!-- ✅ Featured Hotels Section -->
<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold">🌟 Featured Hotels</h2>
        <p class="text-muted">Explore our top-rated accommodations</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model?.Any() == true) 
        {
            @foreach (var hotel in Model)
            {
                <div class="col">
                    <div class="card shadow-lg border-0 hotel-card">
                        <!-- ✅ Safe Image Handling -->
                        <img src="@Url.Content("~/images/" + (hotel.ImageUrl ?? "default.jpg"))" 
                            class="card-img-top rounded-top" 
                            style="height: 250px; object-fit: cover;" 
                            alt="@(hotel.Name ?? "Hotel Image")">

                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">🏨 @(hotel.Name ?? "Unknown Hotel")</h5>
                            <p class="card-text text-muted">@(hotel.Description ?? "No description available.")</p>
                            <a href="/Hotels/Details/@(hotel.Id)" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted">❌ No hotels available.</p>
        }
    </div>
</div>
